@model IEnumerable<Vidly.Models.MovieModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Movies</h2>
    <div class="row">
        <div class="col-md-12">
            @*@Html.ActionLink("NEW MOVIE", "Create", "Movie",null, new { @class = "btn btn-primary" })*@
            <a href="@Url.Action("Create", "Movie")" class="btn btn-primary">NEW MOVIE</a>

        </div>
        

    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() == 0)
            {
                <text>No Movie to show</text>
            }
            else
            {
                <table id="movie-table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Movie</th>
                            <th>Genere</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model)
                {
                            <tr>
                                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                                <td>@movie.Genere.Name</td>
                                <td>
                                    <button class="btn-link js-delete" data-movie-id ="@movie.Id" >
                                        Delete
                                    </button>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>

            }

        </div>

    </div>
   
</div>
@section scripts{
    <script>
        $(function () {
            $("#movie-table .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure delete this movie?", function () {
                    $.ajax({
                        url: "/api/movie/" + button.attr("data-movie-id"),
                        method: "DELETE",
                        success: function (result) {
                            console.log("Success");
                            button.parents("tr").remove();
                        }
                    });

                });

            });

        });

    </script>
    }


