
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Movies</h2>
    <div class="row">
        <div class="col-md-12">
            @*@Html.ActionLink("NEW MOVIE", "Create", "Movie",null, new { @class = "btn btn-primary" })*@
            <a href="@Url.Action("Create", "Movie")" class="btn btn-primary">NEW MOVIE</a>

        </div>


    </div>
    <br />
    <div class="row">
        <div class="col-md-12">

            <table id="movie-table" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Genere</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>

</div>
@section scripts{
    <script>
        $(function () {
            var table = $("#movie-table").DataTable({
                ajax: {
                    url: "/api/movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href = '/movie/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }

                    },
                    {
                        data: "genere.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class = 'btn-link js-delete-movie' data-movie-id ='" + data + "'>Delete</button>";
                        }
                    }

                ]

            });
            $("#movie-table").on("click", ".js-delete-movie", function () {
                var button = $(this);
                bootbox.confirm("Are you sure delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movie/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function (result) {
                                console.log("Success");
                                table.row(button.parents("tr")).remove().draw();                             
                            }
                        });

                    }               

                });

            });

        });

    </script>
}


