
@{
    ViewBag.Title = "New Rental Form";
}

<h2>New Rental Form</h2>
<form>
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movies" type="text" value="" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="selectedMovies" class="list-group"></ul>
        </div>

    </div>

    <button class="btn btn-primary">Submit</button>
</form>
@section scripts{
    <script>
        var vm = {
            movieIds: []
        };
        var customers = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            remote: {
                //url: '/api/customer/%QUERY',
                url: '/api/customer?query=%QUERY',
                wildcard: '%QUERY'
            }
        });

        $('#customer').typeahead({
            minlength: 3,
            highlight: true
        }, {
            name: 'customers',
            display: 'name',
            source: customers
        });
        var movies = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            remote: {
                url: '/api/movie?query=%QUERY',
                wildcard: '%QUERY'
            }
        });
        $('#movies').typeahead({
            minlength: 3,
            highlight: true
        }, {
            name: 'movies',
            display: 'name',
            source: movies
        }).on("typeahead:select", function (e, movie) {
            $("#selectedMovies").append("<li class='list-group-item'>" + movie.name + "</li>");
            $("#movies").typeahead("val", "");
            vm.movieIds.push(movie.id);
        });
    </script>

}